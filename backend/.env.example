# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Email Configuration (optional - for future notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

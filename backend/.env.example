# Database
MONGODB_URI=mongodb://localhost:27017/mindgarden

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# OpenAI API (optional - fallback to rule-based responses if not provided)
OPENAI_API_KEY=your-openai-api-key

# Encryption Key for sensitive data (32 character hex string)
ENCRYPTION_KEY=your-32-character-hex-encryption-key

# Server Configuration
PORT=5000
